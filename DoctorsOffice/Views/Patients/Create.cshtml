@{
  Layout = "_Layout";
}

@model DoctorsOffice.Models.Patient

<h4>Add a new patient</h4>

@using (Html.BeginForm())
{
  @Html.ValidationSummary(true, "Error", new { @class = "text-danger" })
  @Html.HiddenFor(model => model.PatientId)

   <div class="form-group">
    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
    @Html.TextBoxFor(model => model.Name)
    @Html.ValidationMessageFor(model => model.Name, "This doctor has already been added for this patient", new { @class = "text-danger" })  
   </div>   
  </div>
   
    @Html.LabelFor(model=>model.Birthday)
    @Html.EditorFor(model => model.Birthday)

    @Html.Label("Select doctor")
    @Html.DropDownList("DoctorId")

    <input type="submit" value="Add new patient" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all patients", "Index")</p>